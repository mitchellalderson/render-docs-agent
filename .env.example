# ===========================================
# Render Docs Agent - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ===========================================
# Required API Keys
# ===========================================

# Anthropic API Key (for Claude AI chat responses)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# OpenAI API Key (for generating embeddings)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL credentials (change password for production!)
POSTGRES_USER=docsagent
POSTGRES_PASSWORD=docsagent_dev_password
POSTGRES_DB=docs_agent

# ===========================================
# Backend Configuration
# ===========================================

# Node environment
NODE_ENV=development

# Backend server port
BACKEND_PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# AI Model Configuration
# ===========================================

# OpenAI Embedding Model
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Claude Model for Chat
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3

# ===========================================
# Frontend Configuration
# ===========================================

# API URL (for frontend to reach backend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Application name
NEXT_PUBLIC_APP_NAME=Docs Agent

# ===========================================
# Production Notes
# ===========================================
#
# For production deployment to Render.com:
# 1. Change POSTGRES_PASSWORD to a strong password
# 2. Update FRONTEND_URL to your actual frontend URL
# 3. Update NEXT_PUBLIC_API_URL to your actual backend URL
# 4. Set NODE_ENV=production
# 5. Never expose API keys in client-side code
#
# See DEPLOYMENT.md for full production setup guide
#
